<%- include('../_partial/_header', {hasUsername:hasUsername, username:username}); -%>
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h1>Vote Survey</h1>
                <p>
                    Below are all the current open surveys available. Choose one to vote.
                </p>
            </div>
            <div class="panel-body">
                <% if (voteSurveyDetails) { %>
                    <%- list %>

                        <div class="panel-body">
                            <form class="form-survey" method="POST" action="/voteSurveyPost">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Survey Name" name="survey"
                                        aria-describedby="basic-addon1">
                                </div>
                                <br />
                                <label>Available Times</label>
                                <br />
                                <label>Please write as yyy-mm-dd hh:mm:ss <br/>
                                    Use the + button to vote on multiple options
                                </label>
                                <button type="button" id="add-times">+</button>
                                <div class="input-group" id="proposed-time-id">
                                    <input type="text" class="form-control" name="times"
                                        aria-describedby="basic-addon1">
                                </div>
                                <br />
                                <input type="submit" class="btn btn-default navbar-btn" value="Vote" />
                            </form>
                            <script>
                                $("#add-times").click(function () {
                                  $("#proposed-time-id").append('            <div class="form-group">              <input type="text" class="form-control" name="times" aria-describedby="basic-addon1">            </div><br/>')
                                });
                              </script>
                        </div>

                        <% } else { %>
                            <p>
                                There's no open survey right now.
                            </p>
                        <% } %>
            </div>
        </div>
    </div>

    <%- include('../_partial/_footer'); -%>