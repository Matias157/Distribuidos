<%- include('../_partial/_header', {hasUsername:hasUsername, username:username});  -%>

  <div class="col-md-8">

    <div class="panel panel-default">

      <div class="panel-heading">
        <h3>New Survey</h3>
      </div>
      <div class="panel-body">
        <form class="form-survey" method="POST" action="/newSurveyPost">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Survey Name" name="name"
                aria-describedby="basic-addon1">
            </div>
            <br />
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Place" name="place" aria-describedby="basic-addon1">
            </div>
            <br />
            <label>Proposed Time</label>
            <br />
            <label>Please write as yyy-mm-dd hh:mm:ss</label>
            <button type="button" id="add-times">+</button>
            <div class="input-group" id="proposed-time-id">
              <input type="text" class="form-control" name="proposed_times" aria-describedby="basic-addon1">
            </div>
            <br />
            <label>Deadline</label>
            <br />
            <label>Please write as yyy-mm-dd hh:mm:ss</label>
            <div class="input-group">
              <input type="text" class="form-control" name="deadline" aria-describedby="basic-addon1">
            </div>
            <input type="submit" class="btn btn-default navbar-btn" value="Submit" />
        </form>
        <script>
          $("#add-times").click(function () {
            $("#proposed-time-id").append('            <div class="form-group">              <input type="text" class="form-control" name="proposed_times" aria-describedby="basic-addon1">            </div><br/>')
          });
        </script>
      </div>
    </div>
  </div>

  <%- include('../_partial/_footer'); -%>